```yaml
name: Orka Ephemeral Runner CI

on:
  push:
    branches:
      - main
  pull_request:
    branches:
      - main

jobs:
  setup-and-run:
    runs-on: ubuntu-latest  # Initial job runs on Ubuntu to spin up Orka VM

    steps:
      # Step 1: Spin up Orka ephemeral runner
      - name: Spin up Orka runner
        id: orka-up
        uses: jeff-vincent/orka-actions-up@v1.1.1
        with:
          orkaUser: ${{ secrets.ORKA_USER }}
          orkaPass: ${{ secrets.ORKA_PASS }}
          orkaBaseImage: gha_bigsur_v3.img  # Replace with your Orka VM image
          githubPat: ${{ secrets.GH_PAT }}
          vpnUser: ${{ secrets.VPN_USER }}
          vpnPassword: ${{ secrets.VPN_PASSWORD }}
          vpnAddress: ${{ secrets.VPN_ADDRESS }}
          vpnServerCert: ${{ secrets.VPN_SERVER_CERT }}
          vcpuCount: 6
          coreCount: 6

      # Step 2: Run job on Orka ephemeral runner
      - name: Run on Orka macOS runner
        runs-on: [self-hosted, macOS, orka-macos]  # Labels must match Orka runner
        steps:
          # Step 2.1: Checkout code
          - name: Checkout code
            uses: actions/checkout@v4

          # Step 2.2: Install Homebrew
          - name: Install Homebrew
            run: |
              if ! command -v brew &> /dev/null; then
                /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
              else
                echo "Homebrew is already installed"
              fi

          # Step 2.3: Install Google Chrome
          - name: Install Google Chrome
            run: |
              brew install --cask google-chrome || echo "Google Chrome installation failed or already installed"

          # Step 2.4: Verify Chrome installation
          - name: Verify Chrome installation
            run: |
              if [ -d "/Applications/Google Chrome.app" ]; then
                echo "Google Chrome is installed"
                /Applications/Google\ Chrome.app/Contents/MacOS/Google\ Chrome --version
              else
                echo "Google Chrome not found"
                exit 1
              fi

          # Step 2.5: Print Hello World
          - name: Print Hello World
            run: echo "Hello, World!"

          # Step 2.6: Print environment details
          - name: Print environment details
            run: |
              echo "Runner OS: $RUNNER_OS"
              echo "macOS version: $(sw_vers -productVersion)"

      # Step 3: Tear down Orka runner
      - name: Tear down Orka runner
        if: always()  # Run even if previous steps fail
        uses: jeff-vincent/orka-actions-down@v1.1.0
        with:
          orkaUser: ${{ secrets.ORKA_USER }}
          orkaPass: ${{ secrets.ORKA_PASS }}
          githubPat: ${{ secrets.GH_PAT }}
          vpnUser: ${{ secrets.VPN_USER }}
          vpnPassword: ${{ secrets.VPN_PASSWORD }}
          vpnAddress: ${{ secrets.VPN_ADDRESS }}
          vpnServerCert: ${{ secrets.VPN_SERVER_CERT }}
          vmName: ${{ steps.orka-up.outputs.vm-name }}
```
